<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BookingAutomationSuite" parallel="tests" thread-count="1">

    <!-- Global parameters for all tests -->
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>

    <test name="BookingFlowTest" preserve-order="true">
        <parameter name="environment" value="staging"/>
        <classes>
            <class name="comupnormaltests.BookingTest">
                <methods>
                    <include name="bookingFlowTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Additional test configurations can be added here -->
    <!-- <test name="AdditionalTests">...</test> -->

    <listeners>
        <listener class-name="comupnormaltests.TestListener"/>
    </listeners>
</suite>
